# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/universal_api
# For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/universal_api

# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_VERSION=v1
API_KEY=your-secret-api-key-here

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
SESSION_SECRET=your-session-secret-key-here

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Database Configuration
DB_NAME=universal_api
DB_POOL_SIZE=10
DB_BUFFER_MAX_ENTRIES=0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External API Configuration (Optional)
EXTERNAL_API_BASE_URL=https://api.example.com
EXTERNAL_API_KEY=your-external-api-key

# Development Configuration
DEBUG=true
VERBOSE_LOGGING=true
